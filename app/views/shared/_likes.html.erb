<% if current_user %>
  <% if recipe.liked_by?(current_user) %>
    <%= link_to  recipe_likes_path(recipe), method: :delete, class: "like-count-border" do %>
      いいね
      <i class="fas fa-heart"></i>
      <%= recipe.likes.count %>
    <% end %>
    <% else %>
    <%= link_to recipe_likes_path(recipe), method: :post, class: "like-count-border" do %>
      いいね
      <i class="far fa-heart"></i>
      <%= recipe.likes.count %>
    <% end %>
  <% end %>
<% end %>