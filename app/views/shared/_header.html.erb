<%# CSS・・・assets/stylesheets/shared/header.css %>
<%# ヘッダー部分 %>
<header class='index-header d-flex align-items-center justify-content-center justify-content-md-between py-3'>
  <h1><%= link_to "H.R", root_path, class:"header-title" %></h1>
  <div class="top">
    <% if user_signed_in? %>
      <%# ログインしていた場合 %>
      <div class="hello-user">こんにちは、<%= current_user.nickname%>さん</div>
      <%= link_to "あなたのレシピ", user_path(current_user.id), class: "btn btn-primary my-2" %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-primary me-2 logout" %>
    <% else %>
      <%# ログインしてない場合 %>
      <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-primary me-2" %>
      <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</header>
