<%# ユーザー新規登録画面 %>
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <main class="text-center form-signin">
    <h1 class="login-top h3 mb-3 fw-normal">Please sign in</h1>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-floating">
      <div class="field">
        <%= f.label :ニックネーム %><br />
        <%= f.text_field :nickname, class:"form-control", id:"nickname", placeholder:"例) furima太郎", maxlength:"40" %>
      </div>
      <div class="field">
        <label>メールアドレス</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
      <div class="field">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder:"6文字以上の半角英数字" %>
      </div>
      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, class:"form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
      <div class="field">
        <%= f.label :都道府県 %><br />
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %>
      </div>
      <div class="field w-100 btn btn-lg btn-primary">
        <%= f.submit "Sign up" %>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </h1>
</main>
<% end %>
